.cart {
  width: 750rpx;
}
.userInfo {
  padding: 30rpx;
  font-size: 30rpx;
}
.userInfo .personalInfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.userInfo .personalInfo .tel {
  display: flex;
  align-items: center;
}
.userInfo .personalInfo .arrow-right {
  border-top: 1rpx solid #666;
  border-right: 1rpx solid #666;
  width: 15rpx;
  height: 15rpx;
  transform: rotate(45deg);
  margin-left: 30rpx;
}
.line {
  width: 750rpx;
  height: 15rpx;
  vertical-align: top;
  border-bottom: 20rpx solid #f5f5f5;
}
.store {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #ddd;
  font-size: 30rpx;
}
.store .icon-dianpu {
  margin-right: 10rpx;
  vertical-align: bottom;
  color: #ccc;
}
.goods_item {
  width: 750rpx;
  display: flex;
  align-items: center;
}
.goods_item image {
  width: 150rpx;
  height: 150rpx;
  flex-shrink: 0;
}
.goods_item .goods_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
}
.goods_item .goods_info .goods_name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_item .goods_info .select {
  display: flex;
  justify-content: space-between;
}
.goods_info .select .number {
  display: flex;
}
.select .number input {
  width: 80rpx;
  text-align: center;
}