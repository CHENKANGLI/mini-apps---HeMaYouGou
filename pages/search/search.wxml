<view class="container">
  <!-- 真搜索框 -->
  <view class="search">
    <view class="search-input">
      <icon type="search" size="30"></icon>
      <input class="realInput" placeholder="请输入您想要的商品"></input>
    </view>
    <view class="cancel" wx:if="{{inputValue}}" bindtap="handleCancel">取消</view>
  </view>

  <!-- 历史记录 -->
  <view class="history">
    <view class="title">
      <view>历史搜索</view>
      <icon type="clear" size="20"></icon>
    </view>
    <view class="list">
      <block>
        <view>jkl</view>
      </block>
    </view>
  </view>

  <!-- 搜索建议列表 -->
  <view class="suggest" wx:if="{{inputValue}}">
    <block wx:for="{{searchList}}" wx:key="index">
       <navigator url="/pages/goods_detail/goods_detail?goods_id={{item.goods_id}}">
         <view>{{item.goods_name}}</view>
       </navigator>
    </block>
  </view>
</view>